{
    "compilerOptions": {
      "outDir": "dist",
      "module": "commonjs",
      "target": "ES6",
      "rootDir": "src",
      "strict": true,
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "baseUrl": "./",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "paths": {
        "*": ["node_modules/*"]
      },

    "declaration": true,   
    "declarationMap": true
    },
    "include": ["src"]
  }
  